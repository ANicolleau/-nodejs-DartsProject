include header.pug

body
    h1 #{name}
    table
        thead
            tr
                td ID
                td Nom du joueur
                td Adresse Mail
                td Nombre de partie gagnée
                td Nombre de partie perdue
                td Date de création
        tbody
            each player in players
                tr
                    td= player.id
                    td= player.name
                    td= player.email
                    td= player.gameWin
                    td= player.gameLost
                    td= player.createdAt
                    td
                        a(href='/players/' + player.id) Afficher
                        a(href='/players/'+ player.id +'/edit') Modifier
                        form(method='POST', action='/players/'+ player.id +'?_method=DELETE')
                            button(type='submit') Supprimer